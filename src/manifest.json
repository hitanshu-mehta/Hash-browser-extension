{
    "name": "Hash Password Manager",
    "version": "0.1",
    "description": "Manage your password securely",
    "manifest_version": 2,
    "permissions": [
        "activeTab",
        "webNavigation",
        "storage"
    ],
    "content_scripts":[
    {
        "all_frames":true,
        "matches" :[
            "<all_urls>"
        ],
        "js":[
            "content/autofill.js"
        ],
        "run_at": "document_start"
    }   
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_popup": "index.html"
    }
}