{
    "name": "Hash Password Manager",
    "version": "0.1",
    "description": "Manage your password securely",
    "manifest_version": 2,
    "permissions": [
        "activeTab",
        "webNavigation",
        "storage",
        "http://*/*",
        "https://*/*",
        "tabs",
        "contextMenus",
        "storage",
        "unlimitedStorage",
        "clipboardRead",
        "clipboardWrite",
        "idle",
        "webRequest",
        "webRequestBlocking",
        "nativeMessaging"
    ],
    "content_scripts": [
        {
            "all_frames": true,
            "js": [
                "content/autofill.js",
                "runtime.js"
            ],
            "matches": [
                "<all_urls>"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "scripts": [
            "background.js",
            "runtime.js"
        ]
    },
    "browser_action": {
        "default_popup": "index.html"
    }
}